{
	"compilerOptions": {
		"types": [
			"node"
		],
		"baseUrl": ".",
		"inlineSources": true,
		"sourceMap": true, // 또는 "inlineSourceMap": true
		"module": "ESNext",
		"target": "ESNext",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		]
	},
	"include": [
		"./src/**/*.ts"
	]
}
